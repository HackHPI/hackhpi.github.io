---
const navigation = [
  { name: 'Home', href: '/' },
  { name: 'Images', href: '/gallery' },
  { name: 'Rules', href: '/rules' },
];
---

<header class="sticky top-0 z-50 bg-hackhpi-purple shadow-xl">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="flex w-full items-center justify-between py-6">
      <div class="flex items-center">
        <a href="/">
          <span class="sr-only">HackHPI</span>
          <img class="h-10 w-auto" src="/HackHPI_white.svg" alt="" />
        </a>
      </div>
      <div class="flex items-center">
        <div class="ml-10 space-x-4 sm:space-x-8">
          {
            navigation.map((it) => (
              <a href={it.href} class="text-base font-medium text-white">
                {it.name}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </nav>
</header>
