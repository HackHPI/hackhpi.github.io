---
import faq from '../assets/data/faq.json';
---

<section id="faq" class="scroll-mt-20">
  <div>
    <div
      class="mx-auto max-w-7xl divide-y divide-gray-200 py-12 px-4 sm:px-6 lg:py-16 lg:px-8"
    >
      <div>
        <h2 class="text-3xl font-bold tracking-tight text-gray-900">
          Frequently asked questions
        </h2>
        <p class="mt-4 text-base text-gray-500">
          Can't find the answer you're looking for? You can always <a
            href="mailto:team@hackhpi.org"
            class="font-medium text-hpi-red">send us an email</a
          > with your enquiry.
        </p>
      </div>
      <div class="mt-8">
        <dl class="divide-y divide-gray-200">
          {
            faq.map((it) => (
              <div class="pt-6 pb-8 md:grid md:grid-cols-12 md:gap-8">
                <dt class="text-base font-medium text-gray-900 md:col-span-4">
                  {it.question}
                </dt>
                <dd class="mt-2 md:col-span-8 md:mt-0">
                  <p class="text-base text-gray-500">{it.answer}</p>
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
</section>
