---
import team from "../assets/data/team.json";
---

<section id="team" class="scroll-mt-16 bg-gray-50">
  <div
    class="mx-auto max-w-7xl px-4 py-12 text-center sm:px-6 lg:px-8 lg:py-24"
  >
    <div class="space-y-8 sm:space-y-12">
      <div class="space-y-5 sm:mx-auto sm:max-w-xl sm:space-y-4 lg:max-w-5xl">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Team</h2>
        <p class="text-xl text-gray-500">Get to know the organizers</p>
      </div>
      <ul
        role="list"
        class="mx-auto grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-4 md:gap-x-6 lg:max-w-5xl lg:gap-x-8 lg:gap-y-12 xl:grid-cols-6"
      >
        {
          team.map((it) => (
            <li>
              <div class="space-y-4">
                {it.image ? (
                  <img
                    class="mx-auto h-20 w-20 rounded-full lg:h-24 lg:w-24"
                    src={it.image}
                    alt=""
                  />
                ) : (
                  <img
                    class="mx-auto h-20 w-20 rounded-full lg:h-24 lg:w-24"
                    src="/img/placeholder.jpg"
                    alt=""
                  />
                )}
                <div class="text-xs font-medium lg:text-sm">
                  <h3>{it.name}</h3>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
