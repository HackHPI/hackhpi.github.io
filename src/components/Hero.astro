---
import { Icon } from 'astro-icon';
import Wave from '../assets/svg/Wave.astro';
---

<div class="w-full bg-hero bg-cover">
  <div
    class="container px-3 py-24 mx-auto flex flex-wrap flex-col md:flex-row items-center text-white"
  >
    <div
      class="flex flex-col w-full md:w-1/2 justify-center items-start text-center md:text-left"
    >
      <div class="sm:text-center lg:text-left">
        <img class="h-48 w-auto" src="/HackHPI_white.svg" alt="" />
        <h1 class="text-xl font-bold tracking-tight sm:text-2xl md:text-3xl">
          about://legal-gov-tech
        </h1>
        <h2 class="text-xl sm:text-2xl md:text-3xl mt-5 sm:mt-8">
          <span class="inline-block align-middle">
            <Icon name="ic:round-date-range" class="w-10 h-10" />
          </span>
          <span class="inline-block align-middle">19 - 20 March 2022</span>
        </h2>
        <h2 class="text-xl sm:text-2xl md:text-3xl mt-1 sm:mt-2">
          <span class="inline-block align-middle">
            <Icon name="mdi:location-on-outline" class="w-10 h-10" />
          </span>
          <span class="inline-block align-middle">Hasso Plattner Institute</span
          >
        </h2>
        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
          <a
            href="#"
            class="flex w-full items-center justify-center rounded-md border border-transparent bg-white px-8 py-3 text-base font-medium text-hpi-red hover:bg-gray-100 md:py-4 md:px-10 md:text-lg"
            >Apply now</a
          >
        </div>
      </div>
    </div>
    <iframe
      class="w-full md:w-1/2 aspect-video rounded-xl"
      src="https://www.youtube.com/embed/59fMv3RgaC0"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
  </div>
  <div class="relative -mt-12 lg:-mt-24">
    <Wave />
  </div>
</div>
